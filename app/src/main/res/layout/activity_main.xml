<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/añadirAlumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="47dp"
        android:text="Añadir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurso" />

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="221dp"
        android:layout_height="59dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="114dp"
        android:ems="10"
        android:hint="Introduce un nombre"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvCurso"
        android:layout_width="223dp"
        android:layout_height="54dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="316dp"
        android:ems="10"
        android:hint="Introduce el curso"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvApellidos"
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Introduce un apellido"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

</androidx.constraintlayout.widget.ConstraintLayout>